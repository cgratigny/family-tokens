%h1 Listing Activities

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @admin_activities.each do |activity|
      %tr
        %td= activity.name
        %td= activity.token_duration
        %td= activity.token_affect.try(:text)
        %td= link_to 'Show', [:admin, activity]
        %td= link_to 'Edit', [:edit, :admin, activity]
        %td= link_to 'Destroy', [:admin, activity], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Activity', [:new, :admin, :activity]
