-# frozen_string_literal: true
= simple_form_for @family, url: [:parents, :activity_signup] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.simple_fields_for :activities do |activity_f|
    = render 'activity_fields', f: activity_f
  .mb-4.text-center
    = link_to_add_association f, :activities do
      .btn.btn-secondary
        %span.fas.fa-plus-circle
        Add Activity

  = render "common/forms/form_submit", cancel_path: nil, f: f, save_text: "Finish Setup"
