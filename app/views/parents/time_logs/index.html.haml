.float-right
  = link_to [:new, :parents, :time_log], class: "btn btn-primary" do
    %span.fas.fa-plus-circle
    Add Time Entry

%h1.mb-4.mt-4 Time Entries


%table.table-striped.table
  %thead
    %tr
      %th Name
      %th Activity
      %th Start
      %th End
      %th Duration
      %th Tokens
      %th
      %th
      %th

  %tbody
    - @time_logs.each do |time_log|
      %tr
        %td= time_log.kid.first_name
        %td= time_log.activity.name
        %td= time_log.starts_at
        %td= time_log.stops_at.present? ? time_log.stops_at : "In Progress..."
        %td= time_log.minutes
        %td= time_log.tokens.round(2)
        %td= link_to 'Show', [:parents, time_log]
        %td= link_to 'Edit', [:edit, :parents, time_log]
        %td= link_to 'Destroy', [:parents, time_log], :method => :delete, :data => { :confirm => 'Are you sure?' }
