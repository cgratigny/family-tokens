-# frozen_string_literal: true
= simple_form_for @family, url: [:parents, :family] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.simple_fields_for :kids do |kid_f|
    = render 'kid_fields', f: kid_f
  .block-links
    = link_to_add_association f, :kids do
      %span.fal.fa-plus-circle
      Add Kid


  = render "common/forms/form_submit", cancel_path: false, f: f
