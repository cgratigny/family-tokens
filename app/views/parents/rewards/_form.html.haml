= simple_form_for [:parents, @reward] do |f|
  - if @reward.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reward.errors.count, "error")} prohibited this kid from being saved:"
      %ul
        - @kid.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :tokens
  = f.input :archived, as: :boolean

  = render "common/forms/form_submit", cancel_path: [:parents, :rewards], f: f, save_text: "Save"
