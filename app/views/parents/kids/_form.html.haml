= simple_form_for [:parents, @kid] do |f|
  - if @kid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kid.errors.count, "error")} prohibited this kid from being saved:"
      %ul
        - @kid.errors.full_messages.each do |msg|
          %li= msg
  = f.input :first_name
  = f.input :last_name
  = f.input :date_of_birth

  = render "common/forms/form_submit", cancel_path: [:parents, :kids], f: f, save_text: "Save"
